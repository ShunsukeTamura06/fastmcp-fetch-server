# FastMCP Fetch Server 環境変数設定

# サーバー設定
HOST=0.0.0.0
PORT=8000

# デフォルト設定
DEFAULT_MAX_LENGTH=5000
DEFAULT_USER_AGENT="FastMCP-Fetch-Server/1.0 (+https://github.com/ShunsukeTamura06/fastmcp-fetch-server)"

# プロキシ設定（必要に応じて）
# PROXY_URL=http://proxy.example.com:8080

# robots.txt設定
IGNORE_ROBOTS_TXT=false

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=./logs/server.log

# デバッグモード
DEBUG=false

# タイムアウト設定
REQUEST_TIMEOUT=30

# リトライ設定
MAX_RETRIES=3

# キャッシュ設定
ENABLE_CACHE=false
CACHE_TTL=300

# セキュリティ設定
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# レート制限
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60